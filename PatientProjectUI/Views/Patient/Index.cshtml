<div class="card">
    <div class="card-header">

        <h2>All Patients</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <a asp-action="AddPatient" asp-controller="Patient" class="btn btn-primary">Add Patient </a>
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th>Patient Id</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>Gender</th>
                            <th>DateOfBirth</th>
                            <th>PhoneNumber</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    $.ajax({
        method: 'GET',
        url: "https://localhost:7243/api/patient",
        success: function (data) {
            var row = '';

            // Loop through each patient in the response
            $.each(data, function (index, patient) {  // Corrected the parameter order
                row += "<tr>";
                row += '<td>' + patient.id + '</td>';
                row += '<td>' + patient.firstName + '</td>';
                row += '<td>' + patient.lastName + '</td>';
                row += '<td>' + patient.gender + '</td>';
                row += '<td>' + patient.dateOfBirth + '</td>';
                row += '<td>' + patient.phoneNumber + '</td>';
                row += '<td>' + patient.address + '</td>';
                row += "</tr>";
            });

            // Append rows to the table body
            $('#dataTable tbody').append(row);
        },
        error: function (error) {
            console.error("Error fetching data:", error);  // Error handling
        }
    });

    

</script>