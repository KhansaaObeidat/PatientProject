<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    $.ajax({
        method: 'GET',
        url: "https://localhost:7243/api/patient",
        success: function (data) {
            var row = '';

            // Loop through each patient in the response
            $.each(data, function (index, patient) {  // Corrected the parameter order
                row += "<tr>";
                row += '<td>' + patient.id + '</td>';
                row += '<td>' + patient.firstName + '</td>';
                row += '<td>' + patient.lastName + '</td>';
                row += '<td>' + patient.gender + '</td>';
                row += '<td>' + patient.dateOfBirth + '</td>';
                row += '<td>' + patient.phoneNumber + '</td>';
                row += '<td>' + patient.address + '</td>';
                row += "<td><a href='/Patient/EditPatient/" + patient.id + "'>Edit</a><br>";

                row += "<a href='' onclick='deletePatient(" + patient.id + ")'>Delete</a></td>";


                row += "</tr>";
         
            });

            // Append rows to the table body
            $('#dataTable tbody').append(row);
        },
        error: function (error) {
            console.error("Error fetching data:", error);  // Error handling
        }

    });

   function  deletePatient(id){
       if (confirm("Are you sure you want to delete this patient?")) {
           $.ajax({
               method: 'DELETE',
               url: "https://localhost:7243/api/patient/" + id,
               success: function (res) {

                   alert("Delete successfully");
                 window.location.href = 'https://localhost:7285/patient';

               }

           })
       }
      
      
     

    }
    

</script>